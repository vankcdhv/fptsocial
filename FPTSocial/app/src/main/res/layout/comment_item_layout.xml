<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCommentItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCmtAva"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nam"
        tools:srcCompat="@drawable/nam" />

    <TextView
        android:id="@+id/labelUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Lê Thiện Đức"
        android:textColor="@color/blackcolor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgCmtAva"
        app:layout_constraintStart_toEndOf="@+id/imgCmtAva"
        app:layout_constraintTop_toTopOf="@+id/imgCmtAva" />

    <TextView
        android:id="@+id/labelContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đẹp quá nè"
        android:textColor="@color/blackcolor"
        app:layout_constraintStart_toStartOf="@+id/labelUserName"
        app:layout_constraintTop_toBottomOf="@+id/labelUserName" />

    <TextView
        android:id="@+id/labelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="23/7/2020"
        android:textColor="@color/blackcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelContent" />

</androidx.constraintlayout.widget.ConstraintLayout>