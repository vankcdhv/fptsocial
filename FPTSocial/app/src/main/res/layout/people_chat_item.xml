<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutChatItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgChatAva"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/labelChatIUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Lê Thiện Văn"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgChatAva"
        app:layout_constraintTop_toTopOf="@id/imgChatAva">

    </TextView>

    <TextView
        android:id="@+id/labelPreviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung tin nhắn nè"
        android:textColor="@color/fullwhite"
        app:layout_constraintBottom_toBottomOf="@id/imgChatAva"
        app:layout_constraintStart_toStartOf="@+id/labelChatIUserName">

    </TextView>

    <TextView
        android:id="@+id/labelChatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:00"
        android:textColor="@color/fullwhite"
        app:layout_constraintBottom_toBottomOf="@+id/labelPreviewContent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>